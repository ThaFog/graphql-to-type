{
    "compilerOptions": {
        "module": "ESNext",
        "declaration": true,
        "target": "ESNext",
        "outDir": "dist/",
        "moduleResolution": "Node",
        "preserveSymlinks": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "spec",
        "dist"
    ]
}
